{% extends 'base.html.twig' %}

{% block title %}Client Dashboard{% endblock %}

{% block body %}
    <h1>Client Dashboard - Hello {{ app.user.firstname }}</h1>

    <div class="buttons mt-3">
        <a class="btn btn-lg btn-primary" href="{{ path('client_workout_create') }}">Create Workout</a>
    </div>

    <ul class="mt-3 nav nav-tabs nav-fill" id="workoutTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab" aria-controls="upcoming" aria-selected="true">
                Upcoming
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="past-tab" data-bs-toggle="tab" data-bs-target="#past" type="button" role="tab" aria-controls="past" aria-selected="false">
                Past
            </button>
        </li>
    </ul>
    <div class="tab-content" id="workoutTabContent">
        <div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
            {% include 'workout/_list.html.twig' with {'workouts': upcoming_workouts} %}
        </div>
        <div class="tab-pane fade" id="past" role="tabpanel" aria-labelledby="past-tab">
            {% include 'workout/_list.html.twig' with {'workouts': past_workouts} %}
        </div>
    </div>
{% endblock %}
